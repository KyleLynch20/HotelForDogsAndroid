<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/bg_roundrect_ripple_light_border"
    app:cardCornerRadius="23dp"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="title" />

        <TextView
            android:id="@+id/amount_per_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount Per Hour: " />

        <TextView
            android:id="@+id/breed_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breed Size Willing To Watch: " />

        <TextView
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio: " />

        <TextView
            android:id="@+id/fenced_backyard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fenced In Back Yard: " />

        <TextView
            android:id="@+id/other_animals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Animals: " />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: " />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: " />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: " />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: " />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State: " />

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City: " />
    </LinearLayout>
</androidx.cardview.widget.CardView>